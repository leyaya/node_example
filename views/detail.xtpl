{{extend ("./shared/_layout.xtpl")}}

{{#block ("content")}}
<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
{{# if (detailData.image)}}
   <header class="intro-header" style="background-image: url({{detailData.image}})">
{{else}}
   <header class="intro-header" style="background-image: url('/img/post-bg.jpg')">
{{/if}}
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                    <h1>{{detailData.title}}</h1>
                    <h2 class="subheading">{{detailData.excerpt}}</h2>
                    <span class="meta">Posted by <a href="#">Start Bootstrap</a> {{detailData.created}}</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Post Content -->
<article class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            {{{detailData.content}}}
            <p>Placeholder text by <a href="http://spaceipsum.com/">Space Ipsum</a>. Photographs by <a href="https://www.flickr.com/photos/nasacommons/">NASA on The Commons</a>.</p>
        </div>
    </div>
</article>
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <hr>
            <div class="media">
                <div class="media-left">
                    <a href="#">
                        <img class="media-object" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 64px; height: 64px;">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">Space Ipsum</h4>
                    <p class="content">Cras sit amet nibh libero, in gravida nulla. Nulla vel metus scelerisque ante sollicitudin commodo.</p>
                    <p class="meta">
                        <span><i class="fa fa-clock-o" aria-hidden="true"></i> <em>August 24, 2014</em></span>
                        <span class="pull-right">
                <a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 10</a>
                <a href="#"><i class="fa fa-thumbs-o-down" aria-hidden="true"></i> 10</a>
              </span>
                    </p>
                </div>
            </div>
            <div class="media">
                <div class="media-left">
                    <a href="#">
                        <img class="media-object" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 64px; height: 64px;">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading">Media heading</h4>
                    <p class="content">Cras sit amet nibh libero, in gravida nulla. Nulla vel metus scelerisque ante sollicitudin commodo.</p>
                    <p class="meta">
                        <span><i class="fa fa-clock-o" aria-hidden="true"></i> <em>August 24, 2014</em></span>
                        <span class="pull-right">
                <a href="#"><i class="fa fa-thumbs-o-up" aria-hidden="true"></i> 10</a>
                <a href="#"><i class="fa fa-thumbs-o-down" aria-hidden="true"></i> 10</a>
              </span>
                    </p>
                    <div class="media">
                        <div class="media-left">
                            <a href="#">
                                <img class="media-object" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 64px; height: 64px;">
                            </a>
                        </div>
                        <div class="media-body">
